<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Track</th>
      <th>Artist</th>
      <th>Duration</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each playlist.tracks}}
    <tr>
      <td>
        {{title}}
      </td>
      <td>
        {{artist}}
      </td>
      <td>
        {{duration}}
      </td>
      <td>
        <a href="/playlist/{{../playlist._id}}/deletetrack/{{_id}}" class="button">
          {{>icons/delete}}
        </a>
      </td>
      <td>
        <a href="/playlist/{{../playlist._id}}/edittrack/{{_id}}" class="button">
          {{>icons/edit}}
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<table class="table">
    <thead>
    <tr>
        <th>Submitted on</th>
        <th>Weather code</th>
        <th>Temperature</th>
        <th>Wind Speed</th>
        <th>Wind Direction</th>
        <th>Pressure</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each station.readings}}
    <tr>
        <td>
            {{time}}
        </td>
        <td>
            {{code}}
        </td>
        <td>
            {{temperature}}
        </td>
        <td>
            {{windSpeed}}
        </td>
        <td>
            {{windDirection}}
        </td>
        <td>
            {{pressure}}
        </td>
        <td>
            <a href="/station/{{../station._id}}/deletereading/{{_id}}"><span class="icon has-text-danger">
              <i class="fas fa-trash"></i>
            </span></a>
        </td>
    </tr>
    {{/each}}
    </tbody>
</table>